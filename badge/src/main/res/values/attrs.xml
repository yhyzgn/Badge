<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Badge">
        <!-- 徽章背景色 -->
        <attr name="bdg_bg_color" format="reference|color" />
        <!-- 徽章文本的颜色 -->
        <attr name="bdg_text_color" format="reference|color" />
        <!-- 徽章文本字体大小 -->
        <attr name="bdg_text_size" format="reference|dimension" />
        <!-- 徽章背景与宿主控件上下边缘间距离 -->
        <attr name="bdg_vertical_margin" format="reference|dimension" />
        <!-- 徽章背景与宿主控件左右边缘间距离 -->
        <attr name="bdg_horizontal_margin" format="reference|dimension" />
        <!-- 徽章文本边缘与徽章背景边缘间的距离 -->
        <attr name="bdg_padding" format="reference|dimension" />
        <!-- 徽章在宿主控件中的位置 -->
        <attr name="bdg_gravity" format="enum">
            <enum name="rightTop" value="0" />
            <enum name="rightCenter" value="1" />
            <enum name="rightBottom" value="2" />
        </attr>
        <!-- 是否可以拖拽删除徽章 -->
        <attr name="bdg_drag_enable" format="boolean" />
        <!-- 拖拽徽章超出轨迹范围后，再次放回到轨迹范围时，是否恢复轨迹 -->
        <attr name="bdg_resume_travel" format="boolean" />
        <!-- 徽章描边宽度 -->
        <attr name="bdg_border_width" format="reference|dimension" />
        <!-- 徽章描边颜色 -->
        <attr name="bdg_border_color" format="reference|color" />
        <!-- 触发开始拖拽徽章事件的扩展触摸距离 -->
        <attr name="bdg_drag_extra" format="reference|dimension" />
    </declare-styleable>
</resources>